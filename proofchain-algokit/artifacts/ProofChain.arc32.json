{
  "name": "ProofChain",
  "description": "Decentralized hate crime reporting smart contract",
  "version": "1.0.0",
  "contract": {
    "name": "ProofChain",
    "methods": [
      {
        "name": "submit_report",
        "description": "Submit a new hate incident report",
        "args": [
          {
            "name": "message",
            "type": "string",
            "description": "Description of the hate incident"
          },
          {
            "name": "police_ref",
            "type": "string",
            "description": "Police reference number (optional)"
          },
          {
            "name": "ipfs_cid",
            "type": "string",
            "description": "IPFS CID for evidence (optional)"
          },
          {
            "name": "is_anonymous",
            "type": "string",
            "description": "Whether report is anonymous (true/false)"
          }
        ],
        "returns": {
          "type": "void",
          "description": "Logs report ID on success"
        }
      },
      {
        "name": "get_report",
        "description": "Retrieve a report by its ID",
        "args": [
          {
            "name": "report_id",
            "type": "bytes",
            "description": "Transaction ID of the report"
          }
        ],
        "returns": {
          "type": "string",
          "description": "Report data as JSON string"
        }
      },
      {
        "name": "get_stats",
        "description": "Get platform statistics",
        "args": [],
        "returns": {
          "type": "string",
          "description": "Platform statistics as JSON string"
        }
      }
    ]
  },
  "networks": {
    "testnet": {
      "appID": 0
    },
    "mainnet": {
      "appID": 0
    }
  }
}
